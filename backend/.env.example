# Server Configuration
NODE_ENV=development
PORT=3001

# Database (Supabase PostgreSQL) - REPLACE WITH YOUR SUPABASE CONNECTION STRING
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# OR for Local PostgreSQL:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/mlms

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
